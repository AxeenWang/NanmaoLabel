<Window x:Class="NanmaoLabelPOC.Views.ImportResultDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="匯入結果"
        Width="500"
        SizeToContent="Height"
        MaxHeight="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        FontFamily="Microsoft JhengHei"
        Background="#F5F5F5">
    <!--
    匯入結果對話框
    [ref: spec.md FR-006, FR-007, FR-008]

    T019: 建立自訂對話框結構
    T021: 匯入筆數、Error 區段、Warning 區段
    T022: Info 區段使用 Expander 預設收合
    -->

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <!-- 標題摘要 -->
            <RowDefinition Height="Auto"/>
            <!-- Error 區段 -->
            <RowDefinition Height="Auto"/>
            <!-- Warning 區段 -->
            <RowDefinition Height="Auto"/>
            <!-- Info 區段 (Expander) -->
            <RowDefinition Height="Auto"/>
            <!-- 確定按鈕 -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- T021: 標題摘要 [ref: spec.md FR-007] -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <!-- 成功/失敗圖示與主訊息 -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock x:Name="StatusIcon"
                           FontSize="32"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>
                <TextBlock x:Name="MainMessage"
                           FontSize="16"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <!-- 訊息統計 [ref: spec.md FR-008] -->
            <StackPanel x:Name="MessageStats"
                        Orientation="Horizontal"
                        Margin="44,0,0,0">
                <TextBlock x:Name="ErrorCountText"
                           Foreground="#D13438"
                           FontWeight="Bold"
                           Margin="0,0,16,0"/>
                <TextBlock x:Name="WarningCountText"
                           Foreground="#FFB900"
                           FontWeight="Bold"
                           Margin="0,0,16,0"/>
                <TextBlock x:Name="InfoCountText"
                           Foreground="#0078D4"
                           FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>

        <!-- T021: Error 區段 [ref: spec.md FR-004] -->
        <Border x:Name="ErrorSection"
                Grid.Row="1"
                Background="#FDE7E9"
                BorderBrush="#D13438"
                BorderThickness="1"
                CornerRadius="4"
                Margin="0,0,0,8"
                Padding="12"
                Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="錯誤"
                           FontWeight="Bold"
                           Foreground="#D13438"
                           FontSize="14"
                           Margin="0,0,0,8"/>
                <ItemsControl x:Name="ErrorList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"
                                       TextWrapping="Wrap"
                                       Margin="0,2"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- T021: Warning 區段 [ref: spec.md FR-005] -->
        <Border x:Name="WarningSection"
                Grid.Row="2"
                Background="#FFF4CE"
                BorderBrush="#FFB900"
                BorderThickness="1"
                CornerRadius="4"
                Margin="0,0,0,8"
                Padding="12"
                Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="警告"
                           FontWeight="Bold"
                           Foreground="#996600"
                           FontSize="14"
                           Margin="0,0,0,8"/>
                <ItemsControl x:Name="WarningList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"
                                       TextWrapping="Wrap"
                                       Margin="0,2"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- T022: Info 區段 - Expander 預設收合 [ref: spec.md FR-006] -->
        <Expander x:Name="InfoExpander"
                  Grid.Row="3"
                  Header="資訊"
                  IsExpanded="False"
                  Margin="0,0,0,16"
                  Visibility="Collapsed">
            <Expander.HeaderTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="資訊"
                                   FontWeight="Bold"
                                   Foreground="#0078D4"
                                   FontSize="14"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="InfoSummaryInHeader"
                                   Foreground="#666666"
                                   FontSize="12"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </Expander.HeaderTemplate>
            <Border Background="#E6F2FF"
                    BorderBrush="#0078D4"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="0,8,0,0"
                    Padding="12">
                <StackPanel>
                    <ItemsControl x:Name="InfoList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           TextWrapping="Wrap"
                                           Foreground="#333333"
                                           Margin="0,2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <!-- T023: 大量訊息摘要 -->
                    <TextBlock x:Name="InfoOverflowText"
                               Foreground="#666666"
                               FontStyle="Italic"
                               Margin="0,8,0,0"
                               Visibility="Collapsed"/>
                </StackPanel>
            </Border>
        </Expander>

        <!-- 確定按鈕 -->
        <Button Grid.Row="4"
                Content="確定"
                Width="100"
                Height="36"
                HorizontalAlignment="Right"
                FontSize="14"
                FontWeight="Bold"
                Background="#0078D4"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand"
                Click="OkButton_Click"/>
    </Grid>
</Window>
